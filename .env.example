# URL for the MCP Obsidian vault server
MCP_VAULT_URL=http://mcp_obsidian:3333

# URL for the existing MCP server
MCP_SERVER_URL=http://mcp_server:3333

# Optional: Path to the vault inside the container (for reference)
# VAULT_PATH=/vault

# API Keys for external services
OPENROUTER_API_KEY=sk-or-your_key_here
GOOGLE_API_KEY=your_google_api_key
GOOGLE_CSE_ID=your_google_cse_id

# Secret for MCP Obsidian vault server
MCP_SECRET=your_secret_token_here


# Auth token for frontend API
MCP_API_AUTH_TOKEN=your_auth_token_here
VITE_MCP_API_AUTH_TOKEN=your_auth_token_here

# Playwright E2E testing - Staging API configuration
PLAYWRIGHT_IMAGE_STAGING_BASE_URL=https://your-staging-api.com
PLAYWRIGHT_IMAGE_STAGING_API_KEY=your_staging_api_key_here

# Development settings
# Set to 'true' to enable localhost origins for local development
# WARNING: NEVER enable in production!
ALLOW_LOCALHOST=false

# Set to 'true' to allow HTTP providers for localhost development
# WARNING: NEVER enable in production - only for local development!
ALLOW_HTTP_PROVIDERS=false

# LM Studio image mode: auto|base64|url
# auto: detect LM Studio automatically (default)
# base64: force base64 encoding for all providers with :8010 port
# url: use URL format (default behavior)
LMSTUDIO_IMAGE_MODE=auto
